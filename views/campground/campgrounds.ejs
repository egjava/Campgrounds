<% include ../partials/header %>


    <header class="jumbotron">
        <h1>Welcome to Campgrounds!!</h1>
        <p>View the best campgrounds from all over the world.</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new" >Add New Campground</a>
        </p>
        <p>
            <form action="/campgrounds" method="GET">
                <div class="form-group">
                    <input id='searchtext'  type="text" name="search" placeholder="Campground Search..." class="form-control">
                   
                      <p><button id='search' type="submit" class="btn btn-primary">Search</button></p>  
                   
                </div>
            
            </form>
        </p>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        
           <% if(noMatch.length > 0){ %>  
                <h3><%= noMatch%> or go <a href="/campgrounds">Back</a></h3>
                <%}%>
            </div>
        <%        campgrounds.forEach(function(campgrounds){ %>
          <div class="col-md-3 col-sm-6">
              <div class="thumbnail">
                  <img  style="height: 200px;" src="<%= campgrounds.image %>"> 
                  <div class="caption col text-center">
                            <h4><%= campgrounds.name%></h4>

                            <% if (campgrounds.rating === 0) { %>
                                <em>No reviews yet.</em>
                            <% } else { %>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star <% if (campgrounds.rating > 1.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (campgrounds.rating > 2.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (campgrounds.rating > 3.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (campgrounds.rating > 4.5) { %> checked <% } %>"></span>
                            <% } %>
                 
                         <p>                  
                             <a href="/campgrounds/<%= campgrounds._id%>" class= "btn btn-primary mx-auto">More Info</a>
                         </p>
                    </div>
                </div>
            </div>  
      

        <% }) %>
  
</div>

<% include ../partials/footer %>
